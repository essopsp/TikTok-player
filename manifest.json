{
  "short_name": "TikTokPlayer",
  "name": "TikTok Video Player PWA",
  "description": "A Progressive Web App for playing TikTok videos seamlessly.",
  "id": "/",
  "scope": "/",
  "scope_extensions": [
    {"origin": "https://tiktokplayer.shlimbo.com.ly/"}
  ],
  "start_url": "/index.html",
  "display": "standalone",
  "display_override": ["window-controls-overlay"],
  "theme_color": "#ff3b5c",
  "background_color": "#ffffff",
  "iarc_rating_id": "PG",
  "prefer_related_applications": false,
  "orientation": "any",
  "dir": "auto",
  "lang": "en-US",
  "categories": ["entertainment", "social", "video"],
  "icons": [
    {
      "src": "icons/icon-48x48.png",
      "sizes": "48x48",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png"
    },
    {
      "src": "icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png"
    },
    {
      "src": "icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png"
    },
    {
      "src": "icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png"
    },
    {
      "src": "icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png"
    },
    {
      "src": "icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "icons/icon-256x256.png",
      "sizes": "256x256",
      "type": "image/png"
    },
    {
      "src": "icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png"
    },
    {
      "src": "icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    },
    {
      "src": "icons/maskable-icon.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "icons/monochrome-icon.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "monochrome"
    }
  ],
  "screenshots": [
    {
      "src": "screenshots/screenshot1.png",
      "sizes": "640x480",
      "type": "image/png",
      "label": "Screenshot of the app"
    }
  ],
  "launch_handler": {
    "client_mode": "auto"
  },
  "file_handlers": [
    {
      "action": "/open",
      "accept": {
        "image/*": [".png", ".jpg", ".jpeg"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+tiktok",
      "url": "/open?url=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "name",
      "text": "description",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "shortcuts": [
    {
      "name": "Play Video",
      "short_name": "Play",
      "description": "Play a TikTok video",
      "url": "/index.html?shortcut=play",
      "icons": [
        {
          "src": "icons/icon-128x128.png",
          "sizes": "128x128",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "play",
      "id": "com.example.tiktokplayer",
      "url": "https://play.google.com/store/apps/details?id=com.example.tiktokplayer"
    }
  ],
  "widgets": [
    {
      "name": "TikTok Feed Widget",
      "short_name": "Feed",
      "description": "Shows latest TikTok videos",
      "tag": "tiktok_feed",
      "screenshots": [
        {
          "src": "icons/widget-icon.png",
          "sizes": "540x540",
          "type": "image/png"
        }
      ],
      "icons": [
        {
          "src": "icons/widget-icon.png",
          "sizes": "192x192"
        }
      ],
      "author": "TikTok Player",
      "data": {
        "interval": "30m",
        "source": "feed"
      },
      "update": "auto",
      "resources": [
        "/widget.html"
      ]
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "background_sync": {
    "periodic": true,
    "register_on_startup": true
  },
  "periodic_sync": {
    "events": [
      {
        "name": "content-update",
        "min_interval": 24
      }
    ]
  },
  "push": {
    "platform": "web",
    "gcm_sender_id": "123456789012"
  }
}
