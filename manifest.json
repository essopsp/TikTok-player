{
  "short_name": "TikTok Player",
  "name": "TikTok Video Player",
  "description": "A modern Progressive Web App for playing TikTok videos with offline support and enhanced features.",
  "id": "/",
  "scope": "/",
  "start_url": "/index.html",
  "display": "standalone",
  "theme_color": "#ff3b5c",
  "background_color": "#121212",
  "orientation": "portrait",
  "categories": ["video", "entertainment", "social"],
  "dir": "ltr",
  "lang": "en-US",
  "iarc_rating_id": "PG",
  "prefer_related_applications": false,
  "display_override": ["window-controls-overlay", "fullscreen"],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "screenshots": [
    {
      "src": "screenshots/screenshot1.png",
      "sizes": "640x480",
      "type": "image/png",
      "form_factor": "wide",
      "label": "TikTok Player Home Screen"
    },
    {
      "src": "screenshots/screenshot2.png",
      "sizes": "640x480",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "TikTok Player on Mobile"
    }
  ],
  "icons": [
    {
      "src": "icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/maskable-icon.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "icons/monochrome-icon.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "monochrome"
    }
  ],
  "launch_handler": {
    "client_mode": ["focus-existing", "auto"]
  },
  "file_handlers": [
    {
      "action": "/open-video",
      "accept": {
        "text/plain": [".txt"]
      },
      "name": "Open video from text file containing TikTok URL"
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+tiktok",
      "url": "/index.html?video=%s"
    },
    {
      "protocol": "web+tiktokvideo",
      "url": "/index.html?video=%s"
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "video"
    }
  },
  "shortcuts": [
    {
      "name": "Play Recent Videos",
      "short_name": "Recent",
      "description": "View your recently watched TikTok videos",
      "url": "/index.html?view=recent",
      "icons": [
        {
          "src": "icons/shortcut-recent.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Paste URL",
      "short_name": "Paste",
      "description": "Quickly paste and play a TikTok video",
      "url": "/index.html?action=paste",
      "icons": [
        {
          "src": "icons/shortcut-paste.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "play",
      "id": "com.example.tiktokplayer",
      "url": "https://play.google.com/store/apps/details?id=com.example.tiktokplayer"
    }
  ],
  "handle_links": "preferred"
}
