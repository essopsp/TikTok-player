
{
  "short_name": "TikTokPlayer",
  "name": "TikTok Video Player PWA",
  "description": "A Progressive Web App for playing TikTok videos seamlessly.",
  "id": "/",
  "scope": "/",
  "scope_extensions": [
    "https://tiktokplayer.shlimbo.com.ly/"
  ],
  "start_url": "/index.html",
  "display": "standalone",
  "theme_color": "#ff3b5c",
  "background_color": "#ffffff",
  "iarc_rating_id": "PG",
  "prefer_related_applications": false,
  "screenshots": [
    {
      "src": "screenshots/screenshot1.png",
      "sizes": "640x480",
      "type": "image/png",
      "label": "Screenshot of the app"
    }
  ],
  "launch_handler": {
    "route_to": "existing-client"
  },
  "file_handlers": [
    {
      "action": "/open",
      "accept": {
        "image/*": [".png", ".jpg", ".jpeg"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+tiktok",
      "url": "/open?url=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "name",
      "text": "description",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "shortcuts": [
    {
      "name": "Play Video",
      "short_name": "Play",
      "description": "Play a TikTok video",
      "url": "/index.html?shortcut=play",
      "icons": [
        {
          "src": "icons/icon-192x192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "play",
      "id": "com.example.tiktokplayer",
      "url": "https://play.google.com/store/apps/details?id=com.example.tiktokplayer"
    }
  ],
  "widgets": {
    "example_widget": {
      "label": "Widget Label",
      "src": "/widget.html"
    }
  }
}
