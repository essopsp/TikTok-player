{
  "version": 1,
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "style": "emphasis",
      "items": [
        {
          "type": "TextBlock",
          "text": "Quick Play TikTok",
          "weight": "Bolder",
          "size": "Medium",
          "wrap": true,
          "style": "heading"
        }
      ]
    },
    {
      "type": "Input.Text",
      "id": "tiktokUrlInput",
      "placeholder": "Paste TikTok URL here",
      "style": "url"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Play Video",
      "data": {
        "action": "play"
      }
    },
    {
      "type": "Action.OpenUrl",
      "title": "Open App",
      "url": "/index.html"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
} 